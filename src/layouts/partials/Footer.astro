---
import { Image } from "astro:assets";
import whatapssLogo from "@/assets/WhatsAppAzul.svg";
import instagramLogo from "@/assets/instagramAzul.svg";
import emailLogo from "@/assets/emailAzul.svg";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import { markdownify } from "@/lib/utils/textConverter";
const { footer_content, copyright } = config.params;
---

<footer class="section bg-theme-light pb-0">
  <div class="container">
    {/* footer menu */}
    <div class="row">
      {
        menu.footer.map((col) => {
          return (
            <div class="mb-12 sm:col-6 lg:col-3">
              <h2 class="h4" set:html={markdownify(col.name)} />
              <ul class="mt-6">
                {col?.menu.map((item) => (
                  <li class="mb-1">
                    <a href={item.url} rel="">
                      {item.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          );
        })
      }
      {/* social icons */}
      <div class="md-12 sm:col-6 lg:col-3">
        <a href="/" aria-label="JBMContadores">
          <Image
            src={config.site.logo}
            width={Number(config.site.logo_width)}
            height={Number(config.site.logo_height)}
            alt=""
          />
        </a>

        <p class="mt-3 mb-6" set:html={markdownify(footer_content)} />

        <div class="flex gap-6">
          <a
            aria-label="Solcitar info por Whatsapp"
            title="Whatsapp"
            onclick="window.open('https://api.whatsapp.com/send?phone=59892319043&text=Hola,%20Quiero%20más%20%20información%20de%20%20los%20servicios%20ofrecidos%20por%20JBMContadores.')"
          >
            <Image
              class="redes hover:scale-125 transition"
              src={whatapssLogo}
              alt="Logo Whatapss"
            />
          </a>

          <a
            aria-label="Enviar Email"
            href="mailto: yogacumana@hotmail.com"
            title="Envíar correo"
            target="_blank"
            title="Email"
          >
            <Image
              class="redes hover:scale-125 transition"
              src={emailLogo}
              alt="Logo Email"
            />
          </a>

          <a
            aria-label="Visitar Instagram"
            href="https://www.instagram.com/jbmcontadores/"
            target="_blank"
            title="Instagram"
          >
            <Image
              class="redes hover:scale-125 transition"
              src={instagramLogo}
              alt="Logo Instagram"
            />
          </a>
        </div>
      </div>
    </div>
  </div>
  {/* copyright */}
  <div class="border-t border-border py-6">
    <p class="text-sm text-center" set:html={markdownify(copyright)} />
  </div>
</footer>
