---
import { Image } from "astro:assets";
import imagenLogo from "@/assets/favicon.svg";
---

<section>
  <div class="uno"></div>
  <div class="dos">
    <Image
      class="tres -translate-y-2 animate-slide-down block pl-20 transition-transform duration-300 ease-in-out hover:scale-125 hover:rotate-6"
      src={imagenLogo}
      alt="Logo de la empresa"
      srcset=""
      width={90}
      height={90}
    />
  </div>
</section>

<style>
  section {
    background-image: url("../assets/banner-v1.jpg");
    height: 320px;
    width: 100%;
    position: absolute;
    background-size: 100% 100%; /*Con esto ocupas el 100% del contenedor*/
    background-repeat: no-repeat;
    display: flex;
  }
  .uno {
    flex: 3;
  }
  .dos {
    flex: 2;
    position: relative;
    display: flex;
    justify-content: start;
  }
  .tres {
    width: 15rem;
  }
  @keyframes slide-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  @media screen and (max-width: 767px) {
    section {
      background-image: url("../assets/BannerVertical.jpg");
      height: 860px;
      flex-direction: column;
    }
    .dos {
      justify-content: center;
    }
    .tres {
      padding: 0;
      width: 10rem;
    }
  }
</style>
