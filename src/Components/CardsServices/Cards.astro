---
import { Image } from "astro:assets";
import moreinfoLogo from "@/assets/moreinfo.svg";
const { title, icons, description } = Astro.props;
---

<div class="cards hover:scale-105 transition flex flex-col">
  <div class="color">
    <Image src={icons} alt={title} />
  </div>

  <div class="dataTime border border-gray-300">
    <div class="header">
      <h4>{title}</h4>
      <a aria-label="Màs información" id="ancla" href="http://">
        <Image
          src={moreinfoLogo}
          alt="Icono de la empresa"
          width={60}
          height={60}
        /></a
      >
    </div>
    <div class="body">
      <hr />
      <p>
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  #ancla {
    text-decoration: none;
    width: 25px;
  }
  .cards {
    display: grid;
    grid-template-rows: 20% 80%;
    padding: 0.2rem;
    width: 5rem;
  }
  .color {
    background: hsl(195, 45%, 45%);
    border-top-right-radius: 0.8rem;
    border-top-left-radius: 0.8rem;
    display: flex;
    justify-content: right;
    padding-right: 0.8rem;
    overflow: hidden;
  }
  .color img {
    width: 2.5rem;
    height: 2.5rem;
    margin-top: -0.2rem;
    opacity: 0.6;
  }

  .dataTime {
    background: white;
    border-radius: 0.8rem;
    margin-top: -1rem;
    padding: 1.5rem;
    z-index: 20;

    display: flex;
    flex-direction: column;
    justify-content: space-between;

    box-shadow: 0px 30px 40px -20px var(--grayishBlue);
  }

  .header {
    display: flex;
    justify-content: space-between;
  }
  .header h4 {
    letter-spacing: 0.1rem;
    font-size: 1.5rem;
  }
  /* Estilos específicos para móviles */
  @media (max-width: 768px) {
    .cards {
      min-width: 65vw;
    }
    .dataTime {
      padding: 1.2rem;
      justify-content: center;
      align-items: center;

      box-shadow: 0px 30px 40px -20px var(--grayishBlue);
    }
  }
</style>
