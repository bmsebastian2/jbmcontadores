---
import * as contenido from "../layouts/components/certificado.md";
import StickeHabilitado from "../element/StickeHabilitado.astro";
import Boton from "../element/Boton.astro";
import BotonMercadoPago from "../element/BotonMercadoPago.astro";
import Faq from "../element/Faq.astro";
import PoperPrecios from "../element/PoperPrecios.astro";
---

<section class="text-gray-600 body-font mt-12">
  <div
    class="container mx-auto flex px-5 py-12 md:flex-row flex-col items-center"
  >
    <div
      class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center"
    >
      <StickeHabilitado />
      <h1
        class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900"
      >
        Certificados de ingreso
        <div class="myBox mb-3"></div>
      </h1>
      <p class="mb-2 leading-relaxed">
        <strong>{contenido.frontmatter.title}</strong>
        {contenido.frontmatter.description}
      </p>
      <div class="flex flex-col md:flex-row justify-center items-center">
        <a
          type="button"
          target="_blank"
          title="Solcitar info por Whatsapp"
          onclick="window.open('https://api.whatsapp.com/send?phone=59892319043&text=Hola,%20Quiero%20más%20%20información%20de%20%20los%20servicios%20ofrecidos%20por%20JBMContadores.')"
        >
          <Boton title="Solicitar" />
        </a>
        <PoperPrecios />
      </div>

      <p class="text-sm mt-2 text-gray-500 mb-8 w-full">
        ¿Me podrían dar info ?
      </p>

      <div class="flex lg:flex-row md:flex-col">
        <BotonMercadoPago />
      </div>
    </div>
    <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
      <img
        class="object-cover object-center rounded"
        title="Certificados de ingreso"
        alt="Logo y certificado de ingreso"
        src="/images/Group 8.jpg"
      />
    </div>
  </div>
</section>
<div
  class="container mx-auto flex flex-col items-center md:px-48 px-12 text-center"
>
  <p class="text-gray-400">CERTIFICADOS DE INGRESOS:</p>
  <Faq />
</div>

<style>
  .myBox {
    text-align: center;
    border-bottom: 2px solid transparent;
    border-image: linear-gradient(
      0.25turn,
      rgba(255, 249, 34),
      rgba(99, 91, 255, 1),
      rgba(56, 2, 155, 0)
    );
    border-image-slice: 1;
    width: 100%;
  }
</style>
